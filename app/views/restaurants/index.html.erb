<p id="notice"><%= notice %></p>

<body style="background-color:#efded7;">

<center>
<h1 style="font-family:courier">Restaurants</h1>

<br>

<table style="font-family:courier">
  <col width = "150">
  <col width = "150">
  <col width = "150">
  <thead style="font-family:courier">
    <tr>
      <th>Name</th>
      <th>Cuisine</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.cuisine %></td>
        <td><%= restaurant.location %></td>
        <td><%= link_to 'Show | ', restaurant %></td>
        <td><%= link_to 'Edit | ', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h2 style="font-family:courier">
<%= link_to 'New Restaurant', new_restaurant_path %>
</h2>
</center>
